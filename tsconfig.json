{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "typeRoots": ["./node_modules/@types", "./@types"],
    "types": [
      "@nuxt/types",
      "@types/node",
      "@nuxtjs/i18n",
      "@nuxtjs/dayjs",
      "@nuxtjs/axios",
      "vue-axios-http",
      "@nuxtjs/vuetify",
      "vuetify-dialogue",
      "@nuxtjs/auth-next",
      "@chantouchsek/validatorjs",
      "collect.js"
    ]
  },
  "exclude": ["node_modules", ".nuxt", "dist"]
}
